<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dip"
    android:background="@drawable/background_commentbar"
    android:orientation="vertical"
    android:padding="0dip" >

    <EditText
        android:id="@+id/edit_comment_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_toLeftOf="@+id/btn_comment_bar"
        android:background="@drawable/background_comment_edit_rectangle"
        android:hint="@string/comment_empty"
        android:maxLines="3"
        android:minHeight="35dp"
        android:padding="5dip"
        android:singleLine="true"
        android:textColor="@color/font_list_desc"
        android:textSize="@dimen/font_list_subtitle" />

    <TextView
        android:id="@+id/btn_comment_bar"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:textColor="@color/font_list_cover"
        android:textSize="@dimen/font_list_subtitle" />

</RelativeLayout>