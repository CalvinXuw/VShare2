<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_listitem_nor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_item_comment_section_hastitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-15dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="5dip"
                android:layout_height="20dip"
                android:background="@color/section_split" />

            <TextView
                android:id="@+id/text_item_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:textColor="@color/font_comment_section"
                android:textSize="@dimen/font_list_title"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="8dip"
                android:background="@color/section_split" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_item_comment_hastitle_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:padding="10dip"
            android:textColor="@color/font_list_tag"
            android:textSize="@dimen/font_list_subtitle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_item_comment_section_notitle"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_item_comment_notitle_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:textColor="@color/font_list_tag"
            android:textSize="@dimen/font_list_subtitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/divider" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_listitem"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/text_item_comment_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/text_item_comment_time"
                android:textColor="@color/font_list_tag"
                android:textSize="@dimen/font_list_subtitle" />

            <TextView
                android:id="@+id/text_item_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:textColor="@color/font_list_tag"
                android:textSize="@dimen/font_list_tag" />

            <TextView
                android:id="@+id/text_item_comment_cotent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_item_comment_name"
                android:layout_marginTop="5dip"
                android:textColor="@color/font_list_desc"
                android:textSize="@dimen/font_list_subtitle" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/divider" />
    </LinearLayout>

</LinearLayout>