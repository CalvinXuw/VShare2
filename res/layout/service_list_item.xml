<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_listitem"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_item_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/layout_item_service_tag"
                android:textColor="@color/font_list_title"
                android:textSize="@dimen/font_list_title"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_item_service_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <View
                    android:id="@+id/image_item_service_diamond"
                    android:layout_width="24dip"
                    android:layout_height="16dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/image_vip_diamond" />

                <View
                    android:id="@+id/image_item_service_golden"
                    android:layout_width="24dip"
                    android:layout_height="16dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/image_vip_golden" />

                <View
                    android:id="@+id/image_item_service_silver"
                    android:layout_width="24dip"
                    android:layout_height="16dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/image_vip_silver" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/text_item_service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/font_list_desc"
            android:textSize="@dimen/font_list_subtitle" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/divider" />

</LinearLayout>