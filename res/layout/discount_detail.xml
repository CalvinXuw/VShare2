<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_listitem" >

    <!-- 加一个状态view -->

    <include layout="@layout/include_stateview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- 商铺位置及联络方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="@drawable/background_discount_rectangle"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="12dip"
                        android:layout_height="17dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/image_discount_location" />

                    <TextView
                        android:id="@+id/text_discount_addr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_list_desc"
                        android:textSize="@dimen/font_discount_connect" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip "
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/image_discount_phone" />

                    <TextView
                        android:id="@+id/text_discount_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_list_desc"
                        android:textSize="@dimen/font_discount_connect" />
                </LinearLayout>
            </LinearLayout>

            <!-- 折扣信息，图片文字等 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_discount_rectangle"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_discount_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/background_discount_rectangle"
                    android:padding="2dip"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/image_shadow_lecture_summary" />

                <TextView
                    android:id="@+id/text_discount_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/font_list_title"
                    android:textSize="@dimen/font_list_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_discount_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textColor="@color/font_list_tag"
                    android:textSize="@dimen/font_list_tag" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip "
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/text_discount_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:textColor="@color/font_list_desc"
                    android:textSize="@dimen/font_list_subtitle" />

                <TextView
                    android:id="@+id/text_discount_extra"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="-5dip"
                    android:textColor="@color/font_list_desc"
                    android:textSize="@dimen/font_list_subtitle" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>