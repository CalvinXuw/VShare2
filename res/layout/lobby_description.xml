<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_listitem_nor"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_head_lobby"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_head_lobby"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textColor="@color/font_list_desc"
        android:textSize="@dimen/font_list_subtitle" />

    <LinearLayout
        android:id="@+id/btn_lobby_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dip"
        android:layout_marginTop="-10dip"
        android:gravity="right|center_vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dip"
            android:paddingLeft="5dip"
            android:text="@string/lobby_detail"
            android:textColor="@color/font_location_section"
            android:textSize="@dimen/font_list_subtitle"
            android:textStyle="bold" />

        <View
            android:id="@+id/image_lobby_description"
            android:layout_width="8dip"
            android:layout_height="7dip"
            android:background="@drawable/image_lobby_detail_shrink" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lobby_description_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginBottom="-10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="5dip"
            android:layout_height="20dip"
            android:background="@color/section_split" />

        <TextView
            android:id="@+id/text_section_lobby"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:textColor="@color/font_location_section"
            android:textSize="@dimen/font_list_subtitle"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="8dip"
            android:background="@color/section_split" />
    </LinearLayout>

</LinearLayout>