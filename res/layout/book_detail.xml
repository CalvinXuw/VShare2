<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_listitem"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_book_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_book_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dip"
                android:background="@drawable/background_discount_rectangle"
                android:orientation="vertical"
                android:padding="2dip"
                android:scaleType="fitXY" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dip"
                android:layout_marginTop="-6dip"
                android:background="@drawable/image_shadow_lecture_summary" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_book_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="2"
                android:textColor="@color/font_list_title"
                android:textSize="@dimen/font_list_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_book_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_book_detail_title"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:textColor="@color/font_list_desc"
                android:textSize="@dimen/font_list_desc_little" />

            <TextView
                android:id="@+id/text_book_detail_download"
                android:layout_width="85dip"
                android:layout_height="35dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:textColor="@color/font_list_cover"
                android:textSize="@dimen/font_list_subtitle" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dip" >

            <View
                android:layout_width="5dip"
                android:layout_height="20dip"
                android:background="@color/section_split" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="@string/book_detail_desc"
                android:textColor="@color/font_topic_section"
                android:textSize="@dimen/font_list_title"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="8dip"
                android:background="@color/section_split" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_book_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:textColor="@color/font_list_desc"
            android:textSize="@dimen/font_list_subtitle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginBottom="-15dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="5dip"
                android:layout_height="20dip"
                android:background="@color/section_split" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="@string/book_detail_chapter"
                android:textColor="@color/font_topic_section"
                android:textSize="@dimen/font_list_title"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="8dip"
                android:background="@color/section_split" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>